{
  "env": {
    "es2020": true,
    "node": true,
    "browser": true,
    "mocha": true
  },
  "extends": ["prettier"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["off"],
    "semi": ["error", "always"],
    "no-console": "off",
    "no-undef": 2
  }
}

